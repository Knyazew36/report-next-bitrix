{
	"trailingComma": "none",
	"useTabs": true,
	"semi": false,
	"tabWidth": 2,
	"jsSingleQuote": true,
	"singleQuote": true,
	"arrowParens": "avoid",
	"printWidth": 100,
	"importOrder": [
		"^react$",
		"^@/app/(.*)$",
		"^@/pages/(.*)$",
		"^@/widgets/(.*)$",
		"^@/features/(.*)$",
		"^@/entities/(.*)$",
		"^@/shared/(.*)$",
		"^../(.*)$",
		"^./(.*)$"
	],
	"importOrderSeparation": true,

	"importOrderSortSpecifiers": true
}
